<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>لوحة التحكم - @ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Chart.js for graphs -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 100;
            padding: 48px 0 0;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
            background: linear-gradient(180deg, #343a40 0%, #2c3034 100%);
            width: 250px;
            transition: all 0.3s ease;
        }

            .sidebar .nav-link {
                color: rgba(255, 255, 255, .8);
                padding: 0.75rem 1.5rem;
                border-bottom: 1px solid rgba(255, 255, 255, .1);
                transition: all 0.2s ease;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    color: #fff;
                    background-color: rgba(13, 110, 253, 0.2);
                    border-right: 3px solid #0d6efd;
                }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 700;
        }

        .main-content {
            margin-left: 250px;
            padding: 2rem 0;
            min-height: 100vh;
            transition: all 0.3s ease;
        }

        media (max-width: 768px) {
            .sidebar

        {
            width: 100%;
            position: relative;
            transform: translateX(-100%);
        }

        .sidebar.show {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
        }

        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid rgba(0, 0, 0, 0.125);
            transition: all 0.3s ease;
            border-radius: 0.75rem;
        }

            .card:hover {
                transform: translateY(-2px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        .btn-success {
            background-color: #198754;
            border-color: #198754;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .navbar {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .loading {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid #f3f3f3;
            border-top: 3px solid #0d6efd;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        keyframes spin {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }

        }

        .stats-card {
            position: relative;
            overflow: hidden;
        }

            .stats-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, #0d6efd, #198754);
            }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar d-flex flex-column">
        <div class="p-3 border-bottom">
            <h4 class="text-white mb-0">
                <i class="bi bi-shop me-2"></i>
                @if (ViewBag.StoreName != null)
                {
                    @ViewBag.StoreName
                }
                else
                {
                    <text>متجري الإلكتروني</text>
                }
            </h4>
        </div>

        <ul class="nav nav-pills flex-column mb-auto p-2">
            <li class="nav-item">
                <a class="nav-link @(ViewData["ActiveMenu"]?.ToString() == "dashboard" ? "active" : "")"
                   asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-house-door me-2"></i>
                    لوحة التحكم
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewData["ActiveMenu"]?.ToString() == "products" ? "active" : "")"
                   asp-controller="Products" asp-action="Index">
                    <i class="bi bi-box-seam me-2"></i>
                    المنتجات
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewData["ActiveMenu"]?.ToString() == "categories" ? "active" : "")"
                   asp-controller="Cetogeries" asp-action="Index">
                    <i class="bi bi-tags me-2"></i>
                    الأصناف
                </a>
            </li>
            @* <li class="nav-item">
                <a class="nav-link @(ViewData["ActiveMenu"]?.ToString() == "orders" ? "active" : "")"
                   asp-controller="Order1" asp-action="Index">
                    <i class="bi bi-cart-check me-2"></i>
                    الطلبات
                </a>
            </li> *@
            @* <li class="nav-item">
                <a class="nav-link @(ViewData["ActiveMenu"]?.ToString() == "users" ? "active" : "")"
                   asp-controller="Users" asp-action="Index">
                    <i class="bi bi-people me-2"></i>
                    المستخدمين
                </a>
            </li> *@
            <li class="nav-item">
                <a class="nav-link @(ViewData["ActiveMenu"]?.ToString() == "reports" ? "active" : "")"
                   asp-controller="Admin" asp-action="Report">
                    <i class="bi bi-file-bar-graph me-2"></i>
                    التقارير
                </a>
            </li>

        </ul>

        <hr class="my-3 opacity-25">

        <ul class="nav nav-pills flex-column mb-auto p-2">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="SystemSettings">
                    <i class="bi bi-gear me-2"></i>
                    الإعدادات
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-danger" asp-area="Identity" asp-page="/Account/Logout">
                    <i class="bi bi-box-arrow-right me-2"></i>
                    تسجيل الخروج
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="SystemSettings">
                    <i class="bi bi-gear me-2"></i>
                    الإعدادات
                </a>
            @* <li class="nav-item">
                <a class="nav-link" asp-controller="Order1" asp-action="Index">
                    <i class="bi bi-gear me-2"></i>
                    تحكم طلبات
                </a> *@

            @* </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Productimage" asp-action="Index">
                    <i class="bi bi-gear me-2"></i>
                    تحكم صور
                </a>

            </li> *@


        </ul>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Top Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container-fluid">
                <button class="navbar-toggler d-lg-none me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas" aria-controls="sidebarOffcanvas">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-brand d-none d-lg-flex">
                    <i class="bi bi-speedometer2 me-2"></i>
                    لوحة التحكم
                </div>

                <div class="navbar-nav flex-grow-1">
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-funnel me-1"></i>
                            فلترة
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">اليوم</a></li>
                            <li><a class="dropdown-item" href="#">هذا الأسبوع</a></li>
                            <li><a class="dropdown-item" href="#">هذا الشهر</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">تخصيص...</a></li>
                        </ul>
                    </div>
                </div>

                <form class="d-flex me-3" role="search">
                    <input class="form-control me-2" type="search" placeholder="ابحث في النظام..." aria-label="Search">
                    <button class="btn btn-outline-primary" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </form>

                <div class="navbar-text me-3">
                    @if (ViewBag.NewOrdersCount != null)
                    {
                        <span class="badge bg-primary fs-6">
                            @ViewBag.NewOrdersCount طلب جديد
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-primary fs-6">0 طلب جديد</span>
                    }
                </div>

                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://via.placeholder.com/32x32" alt="" width="32" height="32" class="rounded-circle me-2">
                        <strong>@User.Identity?.Name ?? "المدير"</strong>
                    </a>
                    <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>الملف الشخصي</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })">
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="bi bi-box-arrow-right me-2"></i>تسجيل الخروج
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Offcanvas for mobile sidebar -->
        <div class="offcanvas offcanvas-start d-lg-none" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarOffcanvasLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="sidebarOffcanvasLabel">القائمة</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <!-- Mobile sidebar content would go here -->
            </div>
        </div>

        <!-- Page Content -->
        <div class="container-fluid">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </div>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Confirm delete actions
        document.addEventListener('DOMContentLoaded', function() {
            const deleteButtons = document.querySelectorAll('.btn-delete');
            deleteButtons.forEach(function(button) {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    if (confirm('هل أنت متأكد من الحذف؟ هذا الإجراء لا يمكن التراجع عنه.')) {
                        this.closest('form').submit();
                    }
                });
            });

            // Add loading state to buttons
            const submitButtons = document.querySelectorAll('button[type="submit"]');
            submitButtons.forEach(function(button) {
                button.addEventListener('click', function() {
                    this.innerHTML = '<span class="loading"></span> جاري التحميل...';
                    this.disabled = true;
                });
            });
        });

        // Update page title
        document.title = '@ViewData["Title"] - لوحة التحكم';
    </script>
</body>
</html>