{
    <a class="nav-link dropdown-toggle text-dark fw-bold" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="bi bi-person-circle me-1"></i> Hello, @UserManager.GetUserName(User)!
    </a>

    <li class="nav-item d-flex gap-2">
        @* زر لوحة تحكم الأدمن لو Admin *@
        @if (User.IsInRole("Admin"))
        {
            <a class="nav-link btn btn-outline-dark fw-bold rounded-pill px-3" asp-controller="Admin" asp-action="Index">
                <i class="bi bi-speedometer2"></i> لوحة تحكم الأدمن
            </a>
            <a class="nav-link btn btn-outline-primary fw-bold rounded-pill px-3" asp-area="Identity" asp-page="/Account/Manage/Index">
                <i class="bi bi-person-gear"></i> Manage Account
            </a>
        }

        <a class="nav-link btn btn-outline-primary fw-bold rounded-pill px-3" asp-area="Identity" asp-page="/Account/Manage/ExternalLogins">
            <i class="bi bi-box-arrow-in-right"></i> External Logins
        </a>

       

        <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" class="m-0">
            <button type="submit" class="nav-link btn btn-danger fw-bold rounded-pill px-3">
                <i class="bi bi-box-arrow-right"></i> Logout
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item d-flex gap-2">
        <a class="nav-link btn btn-outline-primary fw-bold rounded-pill px-3" asp-area="Identity" asp-page="/Account/Register">
            <i class="bi bi-person-plus"></i> Register
        </a>
        <a class="nav-link btn btn-primary text-white fw-bold rounded-pill px-3" asp-area="Identity" asp-page="/Account/Login">
