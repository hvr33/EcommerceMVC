    /* Lightbox بسيط للصور */
    .lightbox {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.8);
        z-index: 9999;
        justify-content: center;
        align-items: center;
    }

        .lightbox img {
            max-width: 90%;
            max-height: 90%;
            border-radius: 10px;
        }

    .close-lightbox {
        position: absolute;
        top: 20px;
        right: 30px;
        color: white;
        font-size: 40px;
        cursor: pointer;
    }
</style>

<!-- JS المحدث (مع lightbox وتحسينات، بدون تغيير كلاسات) -->
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const thumbs = document.querySelectorAll('.product-thumb');
        const mainImg = document.getElementById('mainProductImage');

        thumbs.forEach(t => {
            t.addEventListener('click', () => {
                mainImg.src = t.src;
                thumbs.forEach(img => img.classList.remove('active-thumb'));
                t.classList.add('active-thumb');
            });
        });

        // النجوم للريفيو
        const stars = document.querySelectorAll(".star-click");
        const ratingInput = document.getElementById("RatingValue");

        stars.forEach(star => {
            star.addEventListener("click", () => {
                const selectedRating = parseInt(star.getAttribute("data-value"));
                ratingInput.value = selectedRating;

                stars.forEach(s => {
                    s.classList.remove("bi-star-fill");
                    s.classList.add("bi-star");
                });

                for (let i = 0; i < selectedRating; i++) {
                    stars[i].classList.remove("bi-star");
                    stars[i].classList.add("bi-star-fill");
                }
            });
        });
    });

    function openLightbox(imgSrc, alt) {
        const lightbox = document.createElement('div');
        lightbox.className = 'lightbox';
        lightbox.innerHTML = `
            <span class="close-lightbox" onclick="this.parentElement.style.display='none'">&times;</span>
            <img src="${imgSrc}" alt="${alt}">
        `;
        document.body.appendChild(lightbox);
        lightbox.style.display = 'flex';
        lightbox.onclick = (e) => { if (e.target === lightbox) lightbox.style.display = 'none'; };
    }
</script>