</section>

<section id="services" class="services section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Site Sections</h2>
        <p>
            These are the main categories that help visitors easily find the products or services they are looking for.


       
    </div><!-- End Section Title -->

    <div class="container my-5">
        <div class="row g-4">
            @foreach (var item in Model.Cetogeries)
            {
                <div class="col-xl-4 col-lg-6 col-md-6">
                    <div class="card border-0 shadow-sm h-100 hover-shadow transition">

                        <!-- صورة -->
                        <div class="card-img-top overflow-hidden" style="height:200px;">
                            <img src="https://localhost:54498/upload/@item.Photos"
                                 alt="@item.Name"
                                 class="w-100 h-100"
                                 style="object-fit:cover;">
                        </div>

                        <!-- بيانات -->
                        <div class="card-body">
                            <h5 class="fw-bold">
                                <a href="/Home/product/@item.Id"
                                   class="stretched-link text-dark text-decoration-none">
                                    @item.Name
                                </a>
                            </h5>
                            <p class="text-muted small mb-0">@item.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

   

<section id="portfolio" class="portfolio section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Portfolio</h2>
        <p>Necessitatibus eius consequatur ex aliquid fuga eum quidem sint consectetur velit</p>
    </div><!-- End Section Title -->
    
    <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

            <!-- Filters -->
            <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
                <li data-filter="*" class="filter-active">All</li>
                @foreach (var cat in Model.Cetogeries)
                {
                    <li data-filter=".cat-@cat.Id">@cat.Name</li>
                }
            </ul>
            <!-- End Portfolio Filters -->
            <!-- Portfolio Items -->
            <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                
               @foreach (var product in Model.Products)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item isotope-item cat-@product.CeitoNavigation.Id">
                        <div class="portfolio-content h-100">
                            <a href="https://localhost:54498/upload/@product.Photo"
                               data-gallery="portfolio-gallery-app"
                               class="glightbox">
                                <img src="https://localhost:54498/upload/@product.Photo"
                                     alt="@product.Name"
                                     class="category-img" />
                            </a>

                            <div class="portfolio-info">
                                <h4>
                                    <a href="/Home/productcurrent/@product.Id" title="More Details">@product.Name</a>
                                </h4>
                                <p>@product.Description</p>
                                <span class="product-price">$49.99</span>
                                    @Html.AntiForgeryToken()
                                <!-- زرار إضافة للسلة -->
                                <button class="btn btn-success add-to-cart-btn" data-id="@product.Id">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                                  
                            </div>
                        </div>
                    </div>
                }          </div>
           
          
        </div>
    </div>
</section> 











<section id="testimonials" class="testimonials section light-background">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Reviews</h2>
        <p>We are honored to always provide you with the best. Here are some of our valued customers' feedback.</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="swiper init-swiper" data-speed="600" data-delay="5000">
            <script type="application/json" class="swiper-config">
                {
                  "loop": true,
                  "speed": 600,
                  "autoplay": {
                    "delay": 5000
                  },
                  "slidesPerView": "auto",
                  "pagination": {
                    "el": ".swiper-pagination",
                    "type": "bullets",
                    "clickable": true
                  },
                  "breakpoints": {
                    "320": {
                      "slidesPerView": 1,
                      "spaceBetween": 20
                    },
                    "768": {
                      "slidesPerView": 2,
                      "spaceBetween": 30
                    },
                    "1200": {
                      "slidesPerView": 3,
                      "spaceBetween": 40
                    }
                  }
                }
            </script>

            <div class="swiper-wrapper">
                @foreach (var item in Model.Reviews2)
                {
                    <div class="swiper-slide">
                        <div class="testimonial-item card shadow-sm p-4 mx-auto">
                            <p>
                                <i class="bi bi-quote quote-icon-left"></i>
                                <span>@item.Description</span>
                                <i class="bi bi-quote quote-icon-right"></i>
                            </p>
                                <img src="https://localhost:54498/upload/@item.Product.Photo" class="testimonial-img rounded-circle mx-auto d-block" style="width:80px; height:80px; object-fit:cover;" alt="@item.Product.Name">
                            <h3 class="mt-3 text-center">@item.Name</h3>
                            <h4 class="text-muted text-center">@item.Subject</h4>
                        </div>
                    </div>
                
                    <!-- End testimonial item -->
                }
            </div>

            <!-- Pagination -->
            <div class="swiper-pagination mt-4"></div>
        </div>

    </div>

</section>

<!-- CSS تحسين الشكل -->
<style>
    .testimonial-item {
        border-left: 5px solid #6610f2;
        transition: 0.3s;
        background: #fff;
        border-radius: 0.5rem;
    }

        .testimonial-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    .testimonial-img {
        border: 3px solid #6610f2;
    }

    .quote-icon-left,
    .quote-icon-right {
        color: #6610f2;
        font-size: 1.2rem;
    }
</style>
</section><!-- /Testimonials Section -->
