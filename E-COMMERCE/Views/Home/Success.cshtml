@model Order

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 p-5 shadow rounded bg-white text-center">

            <h3 class="text-success mb-3"><i class="bi bi-check-circle-fill"></i> تم تأكيد الطلب!</h3>
            <p>شكراً لك، سيتم توصيل طلبك قريباً.</p>

            <hr />
            <p><strong>رقم الطلب:</strong> @Model?.Id</p>
            <p><strong>الاسم:</strong> @Model?.CustomerName</p>
            <p><strong>رقم الهاتف:</strong> @Model?.Phone</p>
            <p><strong>البلد:</strong> @Model?.Country?.Name</p>
            <p><strong>المحافظة:</strong> @Model?.State?.Name</p>
            <p><strong>المدينة:</strong> @Model?.City?.Name</p>
            <p><strong>العنوان:</strong> @Model?.Address</p>
            <p><strong>طريقة الدفع:</strong> @(Model?.Onlinepaid == true ? "أونلاين" : "عند الاستلام")</p>

            <h5 class="mt-4 text-primary">ملخص الطلب:</h5>
            <ul class="list-group mb-3">
                @foreach (var item in Model?.Orderdetials ?? new List<Orderdetial>())
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@item.Product?.Name  "."</span>
                        <span>@item.Quantity × @item.Price = @item.Totalprice</span>
                    </li>
                }
            </ul>


            <a asp-action="Index" class="btn btn-primary btn-lg">العودة للرئيسية</a>
        </div>
    </div>
</div>

