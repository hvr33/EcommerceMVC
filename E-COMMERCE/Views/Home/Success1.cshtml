@model Order
@{
    ViewData["Title"] = "تم الدفع بنجاح";
}

<div class="container mt-5">
    <div class="alert alert-success text-center">
        <h3>تم الدفع بنجاح!</h3>
        <p>شكراً لتأكيدك الطلب، إليك ملخص الطلب:</p>
    </div>

    <div class="card p-3 mb-4">
        <p><strong>رقم الطلب:</strong> @Model.Id</p>
        <p><strong>الاسم:</strong> @Model.CustomerName</p>
        <p><strong>رقم الهاتف:</strong> @Model.Phone</p>
        <p><strong>البلد:</strong> @Model.Country?.Name</p>
        <p><strong>المحافظة:</strong> @Model.State?.Name</p>
        <p><strong>المدينة:</strong> @Model.City?.Name</p>
        <p><strong>العنوان:</strong> @Model.Address</p>
        <p><strong>طريقة الدفع:</strong> @(Model.Onlinepaid) ? "أونلاين" : "عند الاستلام")</p>
    </div>

    <h5 class="text-primary">ملخص المنتجات:</h5>
    <ul class="list-group mb-3">
        @foreach (var item in Model.Orderdetials)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>@item.Product?.Name</span>
                <span>@item.Quantity × @item.Price = @item.Totalprice</span>
            </li>
        }
    </ul>
</div>
