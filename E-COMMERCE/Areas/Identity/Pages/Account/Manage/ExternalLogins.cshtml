<div class="container mt-5">
    <h2 class="mb-4 text-primary">Manage Your External Logins</h2>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.CurrentLogins?.Count > 0)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-primary text-white">
                Registered Logins
            </div>
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <tbody>
                        @foreach (var login in Model.CurrentLogins)
                        {
                            <tr>
                                <td id="@($"login-provider-{login.LoginProvider}")">@login.ProviderDisplayName</td>
                                <td>
                                    @if (Model.ShowRemoveButton)
                                    {
                                        <form id="@($"remove-login-{login.LoginProvider}")" asp-page-handler="RemoveLogin" method="post" class="d-inline">
                                            <input asp-for="@login.LoginProvider" name="LoginProvider" type="hidden" />
                                            <input asp-for="@login.ProviderKey" name="ProviderKey" type="hidden" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm" title="Remove this @login.ProviderDisplayName login">
                                                Remove
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        @: &nbsp;
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    @if (Model.OtherLogins?.Count > 0)
    {
        <div class="card shadow-sm">
            <div class="card-header bg-secondary text-white">
                Add Another Login Provider
            </div>
            <div class="card-body">
                <form id="link-login-form" asp-page-handler="LinkLogin" method="post">
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var provider in Model.OtherLogins)
                        {
                            <button id="@($"link-login-button-{provider.Name}")" type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name">
                                @provider.DisplayName
                            </button>
                        }
                    </div>
                </form>
            </div>
        </div>
    }
</div>

